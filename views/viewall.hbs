<body>
    <nav class="navbar navbar-expand-lg navbar-primary bg-primary sticky-top">
        <a class="navbar-brand font-weight-lighter text-light" href="/home">Flipkart</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        </div>
        <input type="text" class="form-control offset-3 col-4 " aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="Search">

        <div class="collapse navbar-collapse offset-1 " id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li><a href="/addproduct" class="btn-sm text-light" type="button">Add Product</a></li>
                <li>
                    <div class="btn-group">
                        <a href="#" class="btn-sm btn-outline-light dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            My Account
                        </a>
                        <div class=" dropdown-menu dropdown-menu-right">
                            <a href="/profile" class="dropdown-item" type="button">My Profile</a>
                            <a href="/logout" class="dropdown-item" type="button">Logout</a>
                        </div>
                    </div>
                </li>
                <li><a href="#" class="btn-sm text-light" type="button">Cart</a></li>
            </ul>


        </div>
    </nav>
    <div class="container">
        <div class="row mt-5">
            {{#each items}}
            <div class="col-2">
                <div class="card text-center" style="width: 10rem;">
                    <img src="{{photo}}" class="card-img-top" alt="..." style="max-height: 250px;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{price}}</p>
                        <form method="POST" action="/product">
                            <input type="hidden" value="{{_id}}" name="id">
                            <button class="btn btn-sm btn-outline-info w-100" type="submit" class="button">View</button>
                        </form>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    
    
</body>
